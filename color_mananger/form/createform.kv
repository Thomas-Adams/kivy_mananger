#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import get_hex_from_color kivy.utils.get_hex_from_color
<CreateFormView>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: get_color_from_hex('#f5f5f5')
        Rectangle:
            size: root.size
    padding: 50, 50, 50, 50
    GridLayout:
        cols: 1
        rows: 3
        MDTextField:
            hint_text: 'A descriptive color name, that should be unique'
            helper_text: 'A descriptive color name'
            helper_text_mode: 'on_focus'
            id: color_name
        MDTextField:
            hint_text: 'URL/description as origin'
            helper_text: 'URL/description as origin'
            helper_text_mode: 'on_focus'
            id: color_origin
        MDTextField:
            hint_text: 'Title for the origin'
            helper_text: 'Title for the origin'
            helper_text_mode: 'on_focus'
            id: color_title
    GridLayout:
        col2: 2
        rows: 4
        MDSlider:
            id: color_red
            min: 0
            max: 255
            size_hint_x: 0.9
        Label:
            id: red_label
            text: str(int(root.ids.color_red.value))
            size_hint_x: 0.1
            size: 100, 50
            color: get_color_from_hex('#000000')
        MDSlider:
            id: color_green
            min: 0
            max: 255
            size_hint_x: 0.9
        Label:
            id: green_label
            text: str(int(root.ids.color_green.value))
            size_hint_x: 0.1
            size: 100, 50
            color: get_color_from_hex('#000000')
        MDSlider:
            id: color_blue
            min: 0
            max: 255
            size_hint_x: 0.9
        Label:
            id: blue_label
            text: str(int(root.ids.color_blue.value))
            size_hint_x: 0.1
            color: get_color_from_hex('#000000')
            size: 100, 50
        Label:
            canvas.before:
                Color:
                    rgba: (root.ids.color_red.value/255.0,root.ids.color_green.value/255.0,root.ids.color_blue.value/255.0,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: 'Color'
            background_normal: ''
        Label:
            canvas.before:
                Color:
                    rgba: (root.ids.color_red.value/255.0,root.ids.color_green.value/255.0,root.ids.color_blue.value/255.0,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: get_hex_from_color((root.ids.color_red.value/255.0,root.ids.color_green.value/255.0,root.ids.color_blue.value/255.0))
    GridLayout:
        col2: 2
        rows: 1
        spacing: 50, 50
        MDRaisedButton:
            text: 'Reset'

        MDRaisedButton:
            text: 'Save'
